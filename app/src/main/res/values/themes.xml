<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieDB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/toolbar_blue</item>
        <item name="colorPrimaryVariant">@color/toolbar_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextBerkshireStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/berkshireswash_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">79sp</item>
    </style>

    <style name="TextLatoRegular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorPrimary">@color/button_blue</item>
        <item name="colorButtonNormal">@color/button_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>